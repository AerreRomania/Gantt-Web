@model GanttWeb.Models.LoginUser
@{
    ViewData["Title"] = "LoginView";
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">

<div class="container h-100 mt-md-1">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="">
                    <img src="../img/logo transparent font negru.png" class="brand_logo" alt="Logo">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <div class="input-group mb-2 mt-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <span>Nome utente:</span>
                        <input type="text" name="username" id="username" class="form-control input_user" asp-for="Username">

                    </div>
                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <span>Password:</span>
                        <input type="password" name="password" id="password" class="form-control input_pass" asp-for="Password">
                    </div>
                    <br />
                    <div class="form-group mt-2" style="margin-left: 2.25rem">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="customControlInline">
                            <label class="custom-control-label" for="customControlInline">Remember me</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-3 login_container">
                <button type="submit" name="buttonAccess" class="btn login_btn" asp-area="" asp-controller="Login" asp-action="Login">Accesso</button>
            </div>
                }
            </div>

            @*<div class="mt-3">
                <div class="d-flex justify-content-center links">
                    <i>Non registrato?</i> <a href="#" class="ml-2">Crea un account</a>
                </div>
                @*<div class="d-flex justify-content-center links">
                    <a href="#">Forgot your password?</a>
                </div>
            </div>*@
        </div>
    </div>

</div>

